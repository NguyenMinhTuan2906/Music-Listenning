<li>
  <% if comment.content %>
    <div class="commenterImage">
      <%= gravatar_for comment.user %>
    </div>
    <div class="commentText">
      <p><%= comment.content %></p>
      <span class="date sub-text">
        <%= t "post_by" %><%= comment.user.name %>
        <%= time_ago_in_words comment.created_at %>
        <%= t "ago" %>
      </span>
    </div>
  <% end %>
</li>
