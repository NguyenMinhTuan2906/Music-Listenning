<%= form_for comment do |f| %>
  <div class="form-inline">
    <div class="form-group">
      <%= f.text_field :content, class: "form-control comment-content" %>
      <%= f.hidden_field :song_id, value: song.id %>
    </div>
    <div class="form-group">
      <%= f.submit t("add"), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
