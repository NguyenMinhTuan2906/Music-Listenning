<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="logo"><%= link_to t("music_web"), root_path %></div>
      </div>
      <div class="col-md-9">
        <nav>
          <div class="row">
            <div class="col-md-12">
              <ul class="nav navbar-nav navbar-right">
              <li><%= link_to t("home"), root_path %></li>
              <% if logged_in? %>
                <li><%= link_to t("upload"), new_song_path %></li>
                <% if current_user.is_admin? %>
                  <li><%= link_to t("manage"), admin_root_path %></li>
                <% end %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= current_user.name %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("profile"), current_user %></li>
                    <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
                    <li><%= link_to t("your_song"), songs_path %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t("log_out"), logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to t("log_in"), login_path %></li>
              <% end %>
            </ul>
            </div>
          </div>
          </nav>
      </div>
    </div>
  </div>
</header>
